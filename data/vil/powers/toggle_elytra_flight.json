{
    "type": "origins:multiple",
    "name": "Toggleable Glide Flight",
    "description": "You can toggle a state in which you will not be able to use your second mode of flight, gliding, in order to allow for smooth gameplay.",

    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 1
    },

    "toggle": {
        "type": "origins:active_self",
        "key": {
            "key": "key.origins.secondary_active"
        },
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_resource",
                "comparison": "==",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:and",
                "actions": [{
                    "type": "origins:change_resource",
                    "resource": "*:*_resource",
                    "change": 1
                },
                {
                    "type": "origins:execute_command",
                    "command": "function vil:toggles/toggleoff_elytra",
                    "permission_level": 4
                }]
            },
            "else_action": {
                "type": "origins:and",
                "actions": [{
                    "type": "origins:change_resource",
                    "resource": "*:*_resource",
                    "change": -1
                },
                {
                    "type": "origins:execute_command",
                    "command": "function vil:toggles/toggleon_elytra",
                    "permission_level": 4
                }]
            }
        },
        "condition": {
            "type": "origins:and",
            "conditions": [{
                "type": "origins:resource",
                "resource": "vil:flight/flight_resources_resource",
                "comparison": ">=",
                "compare_to": 3600
            },
            {
                "type": "origins:resource",
                "resource": "vil:scourge_virus_timer",
                "comparison": "==",
                "compare_to": 0
            }]
        }
    },

    "prevent_elytra_flight": {
        "type": "origins:prevent_elytra_flight",
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_resource",
            "comparison": "==",
            "compare_to": 1
        }
    }
}