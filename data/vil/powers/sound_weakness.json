    },

    "shrieker_exposure_nojump": {
        "type": "origins:modify_jump",
        "condition": {
            "type": "origins:or",
            "conditions": [{
                "type": "origins:resource",
                "resource": "*:*_isshrieking_resource",
                "comparison": ">",
                "compare_to": 0
            },
            {
                "type": "origins:resource",
                "resource": "*:*_recently_sonic_boomed",
                "comparison": ">",
                "compare_to": 0
            }]
        },
        "modifier": {
            "name": "vil:shrieker_set_jump_zero",
