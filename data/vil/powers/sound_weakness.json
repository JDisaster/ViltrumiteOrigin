    "shrieker_exposure_blur": {
        "type": "origins:stacking_status_effect",
        "min_stacks": 0,
        "max_stacks": 8,
        "duration_per_stack": 60,
        "tick_rate": 11,
        "effect": {
            "effect": "minecraft:nausea",
            "is_ambient": false,
            "show_icon": false,
            "show_particles": false
        },
        "condition": {
            "type": "origins:or",
            "conditions": [{
                "type": "origins:resource",
