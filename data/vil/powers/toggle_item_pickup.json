{
    "type": "origins:multiple",
    "name": "Prevent Item Pickup",
    "description": "You can toggle a state in which you will automatically drop any item that enters your main hand in order to allow for smooth gameplay when using your fist as your main weapon.",

    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 1
    },

    "toggle": {
        "type": "origins:active_self",
        "key": {
            "key": "key.origins.primary_active"
        },
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_resource",
                "comparison": "==",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:and",
                "actions": [{
                    "type": "origins:change_resource",
                    "resource": "*:*_resource",
                    "change": 1
                },
                {
                    "type": "origins:execute_command",
                    "command": "function vil:toggles/toggleoff_pickup",
                    "permission_level": 4
                }]
            },
            "else_action": {
                "type": "origins:and",
                "actions": [{
                    "type": "origins:change_resource",
                    "resource": "*:*_resource",
                    "change": -1
                },
                {
                    "type": "origins:execute_command",
                    "command": "function vil:toggles/toggleon_pickup",
                    "permission_level": 4
                }]
            }
        }
    },

    "prevent_item_pickup": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:drop_inventory",
            "slot": "weapon.mainhand"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_resource",
            "comparison": "==",
            "compare_to": 1
        }
    }
}